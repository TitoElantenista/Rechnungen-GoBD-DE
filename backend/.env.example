# Database
DATABASE_URL=postgresql://rechnungen:rechnungen_secure_password@localhost:5432/rechnungen_db

# S3 Storage (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=invoices
S3_REGION=eu-central-1
S3_USE_SSL=false

# TSA (Time Stamping Authority) - RFC3161
# Für Produktion: Bundesdruckerei D-Trust, GlobalSign, DigiStamp
# Für Tests: DigiCert Free TSA
TSA_URL=http://timestamp.digicert.com
TSA_USERNAME=
TSA_PASSWORD=
TSA_HASH_ALGORITHM=SHA256

# Security
SECRET_KEY=your_super_secret_key_change_in_production_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Invoice Settings
INVOICE_NUMBER_PREFIX=RE
INVOICE_NUMBER_START=10000
CURRENCY=EUR
DEFAULT_TAX_RATE=19.0

# Company (Seller) - Standardwerte für Tests
COMPANY_NAME="Muster GmbH"
COMPANY_STREET="Musterstraße 123"
COMPANY_ZIP="12345"
COMPANY_CITY="Berlin"
COMPANY_COUNTRY="DE"
COMPANY_TAX_ID="DE123456789"
COMPANY_EMAIL="info@muster-gmbh.de"
COMPANY_PHONE="+49 30 12345678"
